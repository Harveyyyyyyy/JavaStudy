
import java.awt.*;
public class Pixel extends Point{
	private Color color;
	public Pixel(Point point,Color color) {
		super(point);
		this.color=color;
	}
	public Pixel() {
		this(new Point(),Color.BLACK);
	}
	public void paint(Graphics g,int x0,int y0) {
		g.drawLine(this.x+x0, this.y+y0, this.x+x0, this.y);
	}
	public String toString() {
		return "ÏñËØ"+super.toString()+"£¬ÑÕÉ«"+this.color.toString();	
	}

}
