package AddFrame;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;
import javax.swing.*;
import javax.swing.AbstractListModel;
import javax.swing.ComboBoxModel;
import javax.swing.JComboBox;
import javax.swing.JRadioButton;
public class AddFrame extends JFrame implements ActionListener {
	JComboBox<String>jc=new JComboBox<>(new MyComboBox());//..
	private JButton button;
	private JTextField[] text;
	public AddFrame() {
		super("整数算数运算器");
		this.setSize(600, 100);
		this.setLocation(300, 240);
		this.setLayout(new FlowLayout());
		text=new JTextField[3];
		this.getContentPane().add(this.text[0]=new JTextField(8));//null
		this.getContentPane().add(jc);
		this.getContentPane().add(this.text[1]=new JTextField(8));//null
		this.getContentPane().add(this.button=new JButton("="));
		this.getContentPane().add(this.text[2]=new JTextField(10));
		text[2].setEditable(false);
		this.setVisible(true);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
//Frame		this.addWindowListener(new WinClose());
		this.button.addActionListener(this);//...Box
		
		
	}
	public static void main(String[] arg) {
		new AddFrame();
	}
	
	//Frame CloseWindow
//	public class WinClose implements WindowListener{
//		public void windowClosing(WindowEvent event) {
//			System.exit(0);
//		}
//		public void windowOpened(WindowEvent event) {}
