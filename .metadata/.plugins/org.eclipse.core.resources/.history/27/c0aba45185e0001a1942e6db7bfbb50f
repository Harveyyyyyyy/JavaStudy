import java.awt.*;
import javax.swing.*;

public class Love{
	protected int x,x0;
	protected int y,y0;
	private double angle;
	private double a;
	private double radius;
	private JTextField[] text;
	private Graphics gr;
	
	public Love(JTextField[] text,int n,Graphics gr) {
		this.text=text;
		this.gr=gr;
		for(int i=0;i<n;i++) {
			 angle=i*Math.PI/512;
			 a=Double.parseDouble(text[0].getText())*Double.parseDouble(text[3].getText());
			 radius=a*(1-Math.cos(angle));
			 x=(int)Math.round(radius*Math.cos(angle+Double.parseDouble(text[4].getText())));
			 y=(int)Math.round(radius*Math.sin(angle+Double.parseDouble(text[4].getText())));
	}
	}
		
	public void DrawLove() {
			 gr.fillOval(this.x0+this.x+Integer.parseInt(this.text[1].getText()), this.y0+this.y+Integer.parseInt(this.text[2].getText()), 1, 1);
			 gr.drawLine(0, 0, 300, 300);
		}
}
